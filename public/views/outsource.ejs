<div class="min-h-screen bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 p-6 transition-colors">
  <div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 shadow-lg rounded-2xl p-6">
    <h1 class="text-2xl font-bold mb-6 text-center">Gestión de Outsource</h1>

    <!-- Formulario -->
    <form action="/outsource" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
      <div>
        <label class="block mb-1 font-medium">Nombre del Técnico</label>
        <input type="text" name="nombre_tecnico" required
               class="w-full p-2 rounded-lg bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 focus:ring focus:ring-green-500 outline-none">
      </div>

      <div>
        <label class="block mb-1 font-medium">Teléfono</label>
        <input type="text" name="telefono" required
               class="w-full p-2 rounded-lg bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 focus:ring focus:ring-green-500 outline-none">
      </div>

      <div>
        <label class="block mb-1 font-medium">Cédula</label>
        <input type="number" name="cc" required
               class="w-full p-2 rounded-lg bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 focus:ring focus:ring-green-500 outline-none">
      </div>

      <div>
        <label class="block mb-1 font-medium">Tipo de Servicio</label>
        <select name="tipo_servicio" multiple required
                class="w-full p-2 rounded-lg bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 focus:ring focus:ring-green-500 outline-none">
          <option value="instalación">Instalación</option>
          <option value="mantenimiento">Mantenimiento</option>
          <option value="diagnóstico">Diagnóstico</option>
        </select>
      </div>

      <div class="col-span-full flex justify-center mt-4">
        <button type="submit"
                class="bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-2 rounded-lg transition-all duration-300">
          Agregar Técnico
        </button>
      </div>
    </form>

    <!-- Tabla -->
    <table class="w-full text-sm border border-gray-300 dark:border-gray-700 rounded-lg overflow-hidden">
      <thead class="bg-gray-200 dark:bg-gray-700">
        <tr>
          <th class="p-2 text-left">SKU</th>
          <th class="p-2 text-left">Nombre</th>
          <th class="p-2 text-left">Teléfono</th>
          <th class="p-2 text-left">Cédula</th>
          <th class="p-2 text-left">Servicios</th>
        </tr>
      </thead>
      <tbody>
        <% if (outsources.length > 0) { %>
          <% outsources.forEach(o => { %>
            <tr class="border-t border-gray-200 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 transition">
              <td class="p-2"><%= o.sku %></td>
              <td class="p-2"><%= o.nombre_tecnico %></td>
              <td class="p-2"><%= o.telefono %></td>
              <td class="p-2"><%= o.cc %></td>
              <td class="p-2"><%= o.tipo_servicio.join(', ') %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="5" class="text-center p-4 text-gray-500">No hay técnicos registrados</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
