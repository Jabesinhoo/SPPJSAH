<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="csrf-token" content="<%= csrfToken %>">

  <title>SPJSAH | </title>
  <link rel="icon" href="/img/logo.png" type="image/png" />
  <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
  <script>
    tailwind.config = { darkMode: 'class' }
  </script>

</head>

<body class="bg-gray-100
             dark:bg-slate-950
             dark:bg-gradient-to-br dark:from-slate-950 dark:via-[#0b1220] dark:to-slate-900
             transition-colors duration-500">

  <div class="min-h-screen flex items-center justify-center p-4 sm:p-6 md:p-8">
    <div class="bg-white dark:bg-slate-900/80
                border border-transparent dark:border-slate-800/50
                backdrop-blur-xl p-6 sm:p-8 rounded-2xl shadow-2xl w-full max-w-sm relative mx-auto">

      <!-- Toggle tema -->
      <button id="theme-toggle" type="button" class="absolute top-4 right-4 p-2 rounded-full
               text-gray-600 dark:text-slate-300
               hover:bg-gray-200 dark:hover:bg-slate-800
               transition-colors duration-500">
        <svg id="sun-icon" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <svg id="moon-icon" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>

      <h2 id="form-title"
        class="text-3xl font-semibold text-center text-gray-900 dark:text-slate-100 mb-6 transition-colors duration-500">
        Registrarse
      </h2>

      <form id="auth-form" class="space-y-4" autocomplete="on" novalidate>
        <img src="/img/logo.png" alt="Logo" class="w-2/3 md:w-1/2 mx-auto" />

        <div>
          <label for="username" class="block text-sm font-medium text-gray-700 dark:text-slate-200">
            Nombre de Usuario
          </label>
          <input type="text" id="username" name="username" inputmode="text" autocapitalize="none"
            autocomplete="username" spellcheck="false" class="mt-1 block w-full rounded-xl
                        border-gray-300 dark:border-slate-700/60
                        bg-white dark:bg-slate-800/70
                        text-gray-900 dark:text-slate-100
                        placeholder-slate-400
                        shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500
                        dark:focus:border-indigo-400 dark:focus:ring-indigo-400" required>
        </div>
        <div id="email-group" class="hidden">
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-slate-200">
            Correo Electrónico
          </label>
          <input type="email" id="email" name="email" autocomplete="email" class="mt-1 block w-full rounded-xl
           border-gray-300 dark:border-slate-700/60
           bg-white dark:bg-slate-800/70
           text-gray-900 dark:text-slate-100
           placeholder-slate-400
           shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500
           dark:focus:border-indigo-400 dark:focus:ring-indigo-400">
        </div>


        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 dark:text-slate-200">Contraseña</label>
          <input type="password" id="password" name="password" minlength="8" autocomplete="new-password" class="mt-1 block w-full rounded-xl
                        border-gray-300 dark:border-slate-700/60
                        bg-white dark:bg-slate-800/70
                        text-gray-900 dark:text-slate-100
                        placeholder-slate-400
                        shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500
                        dark:focus:border-indigo-400 dark:focus:ring-indigo-400" required>
        </div>

        <div id="confirm-password-group">
          <label for="confirm-password" class="block text-sm font-medium text-gray-700 dark:text-slate-200">
            Confirmar Contraseña
          </label>
          <input type="password" id="confirm-password" name="confirm_password" minlength="8" autocomplete="new-password"
            class="mt-1 block w-full rounded-xl
                        border-gray-300 dark:border-slate-700/60
                        bg-white dark:bg-slate-800/70
                        text-gray-900 dark:text-slate-100
                        placeholder-slate-400
                        shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500
                        dark:focus:border-indigo-400 dark:focus:ring-indigo-400" required>
        </div>

        <div class="flex items-center">
          <input type="checkbox" id="show-password"
            class="h-4 w-4 text-indigo-600 dark:bg-slate-800 rounded border-gray-300 focus:ring-indigo-500">
          <label for="show-password" class="ml-2 block text-sm text-gray-900 dark:text-slate-100">Mostrar
            Contraseña</label>
        </div>

        <button type="submit" id="submit-button" class="w-full flex justify-center py-2 px-4 rounded-xl shadow-sm
                       text-sm font-medium text-white
                       bg-indigo-600 hover:bg-indigo-700
                       focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2
                       ring-offset-white dark:ring-offset-slate-900">
          Registrar
        </button>
      </form>

      <p id="toggle-form-text" class="mt-4 text-center text-sm text-gray-600 dark:text-slate-300">
        ¿Ya tienes una cuenta?
        <a href="#" id="toggle-link"
          class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-300 dark:hover:text-indigo-400">
          Inicia Sesión
        </a>
      </p>

      <p id="message" class="text-center mt-4 text-sm font-medium"></p>
      <div id="warningModal"
        class="fixed inset-0 bg-gray-900 bg-opacity-70 hidden z-50 flex items-center justify-center">
        <div class="bg-white rounded-lg shadow-lg p-6 w-96 text-center">
          <h2 class="text-xl font-bold text-red-600 mb-4"> Acción no permitida</h2>
          <p id="warningMessage" class="text-gray-700 mb-6"></p>
          <button id="closeModal" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg">
            Cerrar
          </button>
        </div>
      </div>

    </div>
  </div>

  <script src="/js/registro_inicio.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/zxcvbn/4.4.2/zxcvbn.js"></script>
  <script>
    const passwordInput = document.getElementById('password');
    const strengthText = document.createElement('p');
    strengthText.className = "text-sm mt-1";
    passwordInput.parentNode.appendChild(strengthText);

    passwordInput.addEventListener('input', () => {
      const result = zxcvbn(passwordInput.value);
      const messages = ["Muy débil 😖", "Débil 😟", "Aceptable 😐", "Fuerte 💪", "Muy fuerte 🔒"];
      strengthText.textContent = `Fuerza: ${messages[result.score]}`;
    });
  </script>

</body>

</html>