<div class="container mx-auto px-4 py-4 sm:py-8">
    <!-- En la sección de botones de roles.ejs -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 sm:mb-6 gap-4">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-gray-100">Gestión de Roles de Usuarios</h1>
        <div class="flex flex-col sm:flex-row gap-2 w-full sm:w-auto">
            <a href="/user-approval"
                class="w-full sm:w-auto bg-blue-600 text-white px-4 py-2 rounded-lg shadow-md hover:bg-blue-700 transition duration-300 text-center mb-2 sm:mb-0">
                Aprobar Usuarios
            </a>
            <button id="create-role-btn"
                class="w-full sm:w-auto bg-indigo-600 text-white px-4 py-2 rounded-lg shadow-md hover:bg-indigo-700 transition duration-300">
                Crear Nuevo Rol
            </button>
        </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Estadísticas</h2>
        <div id="user-stats" class="grid grid-cols-1 md:grid-cols-4 gap-4">
        </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Usuario
                        </th>
                        <th
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Rol Actual
                        </th>
                        <th
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Cambiar Rol
                        </th>
                        <th
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody id="user-role-list"
                    class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="create-role-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden items-center justify-center p-4 z-50">
    <div class="bg-white dark:bg-gray-900 p-6 sm:p-8 rounded-lg shadow-xl w-full max-w-md">
        <h2 class="text-xl sm:text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">Crear Nuevo Rol</h2>
        <form id="create-role-form">
            <div class="mb-4">
                <label for="role-name" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Nombre del
                    Rol</label>
                <input type="text" id="role-name" name="name"
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:bg-gray-700 dark:text-white dark:border-gray-600"
                    required>
            </div>
            <div class="flex flex-col sm:flex-row justify-end gap-2 sm:gap-4">
                <button type="button" id="cancel-create-btn"
                    class="w-full sm:w-auto px-4 py-2 rounded-lg text-gray-700 dark:text-gray-300 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition">
                    Cancelar
                </button>
                <button type="submit"
                    class="w-full sm:w-auto px-4 py-2 rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 transition">
                    Guardar Rol
                </button>
            </div>
        </form>
    </div>
</div>

<div id="change-password-modal"
    class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden items-center justify-center p-4 z-50">
    <div class="bg-white dark:bg-gray-900 p-6 sm:p-8 rounded-lg shadow-xl w-full max-w-md">
        <h2 class="text-xl sm:text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">Cambiar Contraseña</h2>
        <form id="change-password-form">
            <input type="hidden" id="change-password-user-id">
            <div class="mb-4">
                <label for="new-password" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Nueva
                    Contraseña</label>
                <input type="password" id="new-password"
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:bg-gray-700 dark:text-white dark:border-gray-600"
                    required>
            </div>
            <div class="mb-4">
                <label for="confirm-password" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Confirmar
                    Contraseña</label>
                <input type="password" id="confirm-password"
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:bg-gray-700 dark:text-white dark:border-gray-600"
                    required>
            </div>
            <div class="flex flex-col sm:flex-row justify-end gap-2 sm:gap-4">
                <button type="button" id="cancel-password-btn"
                    class="w-full sm:w-auto px-4 py-2 rounded-lg text-gray-700 dark:text-gray-300 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition">
                    Cancelar
                </button>
                <button type="submit"
                    class="w-full sm:w-auto px-4 py-2 rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 transition">
                    Cambiar Contraseña
                </button>
            </div>
        </form>
    </div>
</div>

<script src="/js/roles.js"></script>