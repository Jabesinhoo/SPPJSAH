<div class="container mx-auto px-4 py-4 sm:py-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 sm:mb-6 gap-4">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-gray-100">Gestión de Roles de Usuarios</h1>
        <button id="create-role-btn" class="w-full sm:w-auto bg-indigo-600 text-white px-4 py-2 rounded-lg shadow-md hover:bg-indigo-700 transition duration-300">
            Crear Nuevo Rol
        </button>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        <!-- Contenedor con scroll horizontal para móviles -->
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Usuario
                        </th>
                        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Rol Actual
                        </th>
                        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Cambiar Rol
                        </th>
                        <th scope="col" class="relative px-4 py-3">
                            <span class="sr-only">Guardar</span>
                        </th>
                    </tr>
                </thead>
                <tbody id="user-role-list" class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    <!-- Contenido dinámico -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal con mejor adaptabilidad -->
<div id="create-role-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden items-center justify-center p-4 z-50">
    <div class="bg-white dark:bg-gray-900 p-6 sm:p-8 rounded-lg shadow-xl w-full max-w-md">
        <h2 class="text-xl sm:text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">Crear Nuevo Rol</h2>
        <form id="create-role-form">
            <div class="mb-4">
                <label for="role-name" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Nombre del Rol</label>
                <input type="text" id="role-name" name="name" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:bg-gray-700 dark:text-white" required>
            </div>
            <div class="flex flex-col sm:flex-row justify-end gap-2 sm:gap-4">
                <button type="button" id="cancel-create-btn" class="w-full sm:w-auto px-4 py-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700">
                    Cancelar
                </button>
                <button type="submit" class="w-full sm:w-auto px-4 py-2 rounded-lg text-white bg-indigo-600 hover:bg-indigo-700">
                    Guardar Rol
                </button>
            </div>
        </form>
    </div>
</div>

<script src="/js/roles.js"></script>