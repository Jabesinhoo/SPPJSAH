<script src="https://cdn.tailwindcss.com?plugins=forms"></script>
  <script>
    tailwind.config = { darkMode: 'class' }
  </script>
  
<div id="alertContainer" class="fixed top-4 right-4 z-50 space-y-2"></div>

<!-- Vista principal: Lista de spreadsheets -->
<div id="spreadsheetsList" class="space-y-6">
    <!-- Header con botón crear -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">Hojas Dinámicas</h1>
            <p class="text-gray-600 dark:text-gray-400 mt-1">Gestiona y edita tus hojas de cálculo personalizadas</p>
        </div>
        <button 
            onclick="openCreateModal()" 
            class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Nueva Hoja
        </button>
    </div>

    <!-- Contenedor de spreadsheets -->
    <div id="spreadsheetsContainer" class="space-y-4">
        <!-- Se llena dinámicamente con JavaScript -->
        <div class="text-center py-12">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto"></div>
            <p class="text-gray-500 dark:text-gray-400 mt-2">Cargando hojas de cálculo...</p>
        </div>
    </div>
</div>

<!-- Vista editor de spreadsheet -->
<div id="spreadsheetEditor" class="space-y-6" style="display: none;">
    <!-- Header del editor -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex items-center space-x-4">
            <button 
                onclick="backToList()" 
                class="inline-flex items-center px-3 py-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Volver
            </button>
            <div>
                <h1 id="currentSpreadsheetName" class="text-2xl font-bold text-gray-900 dark:text-gray-100"></h1>
                <p id="currentSpreadsheetDesc" class="text-gray-600 dark:text-gray-400 text-sm"></p>
            </div>
        </div>
        
        <div class="flex items-center space-x-2">
            <button 
                onclick="addColumn()" 
                class="inline-flex items-center px-3 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6"></path>
                </svg>
                Columna
            </button>
            <button 
                onclick="addRow()" 
                class="inline-flex items-center px-3 py-2 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Fila
            </button>
        </div>
    </div>

    <!-- Tabla del spreadsheet -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="overflow-x-auto">
            <table id="spreadsheetTable" class="w-full">
                <thead id="tableHeader" class="bg-gray-50 dark:bg-gray-700">
                    <!-- Se llena dinámicamente -->
                </thead>
                <tbody id="tableBody" class="divide-y divide-gray-200 dark:divide-gray-600">
                    <!-- Se llena dinámicamente -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal: Crear Spreadsheet -->
<div id="createSpreadsheetModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-md mx-4">
        <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Nueva Hoja de Cálculo</h3>
            <button onclick="closeCreateModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        
        <form id="createSpreadsheetForm" class="p-6 space-y-4">
            <div>
                <label for="spreadsheetName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Nombre <span class="text-red-500">*</span>
                </label>
                <input 
                    type="text" 
                    id="spreadsheetName" 
                    name="name"
                    required 
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-100 transition-colors duration-200"
                    placeholder="Ej: Inventario de productos">
            </div>
            
            <div>
                <label for="spreadsheetDescription" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Descripción
                </label>
                <textarea 
                    id="spreadsheetDescription" 
                    name="description"
                    rows="3"
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-100 transition-colors duration-200"
                    placeholder="Descripción opcional de la hoja de cálculo"></textarea>
            </div>
            
            <div class="flex justify-end space-x-3 pt-4">
                <button 
                    type="button" 
                    onclick="closeCreateModal()"
                    class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 transition-colors duration-200">
                    Cancelar
                </button>
                <button 
                    type="submit"
                    class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                    Crear Hoja
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal: Agregar Columna -->
<div id="addColumnModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-lg mx-4">
        <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Agregar Columna</h3>
            <button onclick="closeColumnModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        
        <form id="addColumnForm" class="p-6 space-y-4">
            <div>
                <label for="columnName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Nombre de la columna <span class="text-red-500">*</span>
                </label>
                <input 
                    type="text" 
                    id="columnName" 
                    required 
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-100 transition-colors duration-200"
                    placeholder="Ej: Producto, Precio, Estado">
            </div>
            
            <div>
                <label for="columnType" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Tipo de datos
                </label>
                <select 
                    id="columnType" 
                    onchange="toggleSelectOptions()"
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-100 transition-colors duration-200">
                    <option value="text">Texto</option>
                    <option value="number">Número</option>
                    <option value="decimal">Decimal</option>
                    <option value="boolean">Sí/No</option>
                    <option value="date">Fecha</option>
                    <option value="select">Lista desplegable</option>
                    <option value="email">Email</option>
                    <option value="url">URL</option>
                </select>
            </div>
            
            <!-- Opciones para select -->
            <div id="selectOptionsContainer" style="display: none;">
                <label for="selectOptions" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Opciones (una por línea)
                </label>
                <textarea 
                    id="selectOptions"
                    rows="4"
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-100 transition-colors duration-200"
                    placeholder="Opción 1&#10;Opción 2&#10;Opción 3"></textarea>
            </div>
            
            <div>
                <label for="defaultValue" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Valor por defecto
                </label>
                <input 
                    type="text" 
                    id="defaultValue"
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-100 transition-colors duration-200"
                    placeholder="Valor opcional por defecto">
            </div>
            
            <div class="flex items-center">
                <input 
                    type="checkbox" 
                    id="isRequired"
                    class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                <label for="isRequired" class="ml-2 text-sm text-gray-700 dark:text-gray-300">
                    Campo requerido
                </label>
            </div>
            
            <div class="flex justify-end space-x-3 pt-4">
                <button 
                    type="button" 
                    onclick="closeColumnModal()"
                    class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 transition-colors duration-200">
                    Cancelar
                </button>
                <button 
                    type="submit"
                    class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                    Agregar Columna
                </button>
            </div>
        </form>
    </div>
</div>
<script src="/js/spreadsheet.js" defer></script>